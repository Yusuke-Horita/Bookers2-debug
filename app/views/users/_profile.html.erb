<table class="table">
		<tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback:  "no_image.jpg", size: "100x100" %></tr>

		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>

		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>

		<tr>
			<th>follows</th>
			<th>
				<%= link_to follows_user_path(user) do %>
				  <%= user.followings.count %>
				<% end %>
			</th>
		</tr>

		<tr>
			<th>followers</th>
			<th>
				<%= link_to followers_user_path(user) do %>
				  <%= user.followers.count %>
				<% end %>
			</th>
		</tr>

		<tr>
			<th>
				<% if user.id != current_user.id %>
					<% if Relationship.exists?(following_id: current_user.id, follower_id: user.id) %>
						<%= link_to "フォロー外す", user_relationships_path(user), method: :delete, class: "btn btn-success"%>
					<% else %>
						<%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-primary" %>
					<% end %>
				<% end %>
			</th>
			<th></th>
		</tr>
</table>

<div class="row">
	<% if %>
		
	<% end %>
	<%= link_to '',edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>
