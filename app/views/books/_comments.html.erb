<table class="table" id="comments">
	<% book_comments.each do |book_comment| %>
		<tr id="comment-<%= book_comment.id %>">
			<td>
				<%= link_to user_path(book_comment.user) do %>
				<%= attachment_image_tag book_comment.user, :profile_image, :fill, 60, 60, format: "jpeg", fallback: "no_image.jpg" %>
				<% end %>
			</td>
			<td>
				<%= book_comment.comment %>
			</td>
			<td>
				<% if book_comment.user_id == current_user.id %>
					<%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger", remote: true %>
				<% end %>
			</td>
		</tr>
	<% end %>
</table>